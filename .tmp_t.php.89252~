<?php
if(! defined('PATH_APPLICATION')) throw new Exception('PATH_APPLICATION constant is not defined');
defined('PATH_FRAMEWORK') || define('PATH_FRAMEWORK', dirname(__FILE__));

class T{
	
	static public $Config;
	
	static public function Init($config){
		self::Dependent('config.php');
		include($config);
		self::$Config = TConfig;
	}
	
	static public function Dependent($path){
		$filename = PATH_FRAMEWORK.DIRECTORY_SEPARATOR.$path;
		if (file_exists($filename)) include_once $filename;
	}
}
